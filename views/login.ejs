</head>

<body>
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v14.0"
        nonce="VfUlIJaT"></script>

    <nav class="navigation">
        <div class="blog-nav-enclosure">
            <div class="logo-and-links">
                <div class="burger" style="display:none;">
                    <div class="line1"></div>
                    <div class="line2"></div>
                    <div class="line3"></div>
                </div>
                <div class="logo">
                    <div class="burger" style="display:none;">
                        <div class="line1"></div>
                        <div class="line2"></div>
                        <div class="line3"></div>
                    </div>
                    <a href="/">
                        <div class="logo-wrapper">
                            <img src="/logo.png" alt="what2watch">
                        </div>

                    </a>
                </div>
                <ul class="nav_links">
                    <li class="nav_link"> <a href="/blog/posts">Blog</a> </li>
                </ul>


            </div>

        </div>
    </nav>

    <section id="header-container" class="blog-header">
        <div class="wrapper-enclosure-blog">
            <% if(locals.messages){%>
            <% if(messages.error){%>
            <div class="flash-wrapper">
                <div class="flash-message warning">
                    <h2 class="flash-error"><%= messages.error %> </h2>
                </div>
            </div>

            <% }else if(messages.success){ %>
            <div class="flash-wrapper">
                <div class="flash-message success-info">
                    <h2 class="flash-success"><%=messages.success%></h2>
                </div>
            </div>
            <% } %>
            <% } %>
            <div class="form-container-wrapper">
                <div class="forms-container">
                    <div class="form-title">
                        <div class="form-title-header">
                            <i class="history fas fa-long-arrow-alt-left"></i>
                        </div>

                        <h2>Welcome Back</h2>
                        <p>Sign in to continue</p>
                    </div>
                    <div class="actions-wrapper">
                        <form action="/blog/login" id="auth-form" method="POST">
                            <div class="actions-input-wrapper">
                                <div class="actions-input">
                                    <i class="fas fa-user-alt"></i>
                                    <input type="text" name="username" id="email" placeholder="email">
                                </div>
                                <small class="auth">Error Message</small>
                            </div>
                            <div class="actions-input-wrapper">
                                <div class="actions-input">
                                    <i class="fas fa-lock"></i>
                                    <input type="password" name="password" id="password" placeholder="password"
                                        class="pass-input">
                                    <div class="pass-reveal">
                                        <i class="fas fa-eye open-eye"></i>
                                        <i class="fas fa-eye-slash black-eye"></i>
                                    </div>
                                </div>
                                <small class="auth">Error Message</small>
                            </div>
                            <div class="actions-input-wrapper">
                                <div class="actions-input">
                                    <i class="fas fa-lock"></i>
                                    <input type="password" name="confirmclientpassword" id="cpassword"
                                        placeholder="confirm password" class="pass-input">
                                    <div class="pass-reveal">
                                        <i class="fas fa-eye open-eye"></i>
                                        <i class="fas fa-eye-slash black-eye"></i>
                                    </div>
                                </div>
                                <small class="auth">Error Message</small>
                            </div>
                            <div class="forgot-pass">
                                <a href="/blog/reset-password">Forgot Password?</a>
                            </div>
                            <button type="submit" class="send-btn">Sign in</button>
                        </form>
                        <p>Don't have an account? <a href="/blog/register">Sign up now.</a> </p>


                    </div>

                </div>
            </div>



        </div>



    </section>
    <footer id="footer" class="blog-footer" style="padding-top:2rem ;">
        <div class="blog-nav-enclosure">
            <div class="footer-content">
                <div class="copyright-container">
                    <a href="/">
                        <img class="footer-logo" src="/logo.png" alt="what2watch">
                    </a>
                    <div>
                        <span class="copyright"><i class="far fa-copyright"></i></span>
                        <span>All rights reserved.</span>

                    </div>
                </div>
                <div class="important-links">
                    <a href="/">Home</a>
                    <a href="/about-us">About Us</a>
                    <a href="/privacy">Privacy Policy</a>
                    <a href="/movie/upcoming">Upcoming</a>
                </div>
                <div class="socials">
                    <a href="https://www.facebook.com/what2watch.net" target="_blank" class="social-icon facebook"><i
                            class="fab fa-facebook-f"></i></a>
                    <a href="https://www.instagram.com/what2watch4real/" target="_blank" class="social-icon ig"><i
                            class="fab fa-instagram"></i></a>
                    <a href="mailto:what2watch@what2watch.net" target="_blank" class="social-icon mail"><i
                            class="fas fa-envelope"></i></a>
                    <a href="https://youtube.com/channel/UCR5dmDeBAwWdh-IC6dol1gA" target="_blank"
                        class="social-icon yt"><i class="fab fa-youtube"></i></a>

                </div>

            </div>
            <div class="attribution">
                <h6>Powered by</h6>
                <img src="/moviedb-logo2.svg" alt="attribution">
            </div>

        </div>

    </footer>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <!-- embla -->
    <script src="/embla.js"></script>
    <script src="/autoplay.js"></script>
    <script src="/login.js"></script>
    <script src="/validate.js"></script>
    <script src="/index.js"></script>
</body>

</html>