                            <a href="<%= story.user.instagram %>" target="_blank"><img src="/ig-logo.png"
                                    alt="Ig logo"></a>
                            <% } %>
                            <% if(story.user?.twitter){%>
                            <a href="<%= story.user.twitter%>" target="_blank"><img src="/twitter-logo.png"
                                    alt="tw logo"></a>
                            <% } %>
                        </div>
                    </div>
                    <% } %>

                </div>
                <% if(related.length){%>
                <div class="older-posts">
                    <h1 class="cat-title">Related Posts</h1>
                    <div class="older-posts-inner">
                        <div class="embla old-posts-embla">
