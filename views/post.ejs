                    <h5 class="date post-timestamp"> <span>By <strong><%= story.author %></strong></span>
                        <span><%= story.createdAt %>
                        </span> </h5>
                </div>
                <div class="post post-header">
                    <img src="<%= story.photo%>" alt="post-image">
                    <h5 class="image-caption"><%= story.photoTitle %> </h5>
                    </h5>
                </div>
                <div class="post-content">
                    <%- story.body %>
                </div>

                <% } %>
                <h4 class="top-share"><i class="fas fa-share-alt"></i>Share</h4>
                <div class="share-story">
                    <div class="share-title"><i class="fas fa-share-alt"></i>Share</div>
                    <div class="share-links">
                        <a href="https://www.facebook.com/sharer.php?u=https://zoom-sportz.com/stories/post/<%= story.slug%>"
                            target="_blank" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                        <a href="https://twitter.com/share?url=https://zoom-sportz.com/stories/post/<%= story.slug%>&text=Visit zoom-sportz.com to read more"
                            target="_blank" class="social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="https://www.linkedin.com/shareArticle?mini=true&url=https://zoom-sportz.com/stories/post/<%= story.slug%>"
                            target="_blank" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                        <a href="whatsapp://send?text=https://zoom-sportz.com/stories/post/<%= story.slug%>"
                            data-action="share/whatsapp/share"
                            onClick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=300,width=600');return false;"
                            target="_blank" title="Share on whatsapp" class="social-icon"><i
                                class="fab fa-whatsapp"></i></a>
                        <a href="https://telegram.me/share/url?url=https://zoom-sportz.com/stories/post/<%= story.slug%>&text=Visit zoom-sportz.com to read more"
                            class="social-icon"><i class="fab fa-telegram-plane"></i></a>
                    </div>
                </div>

                <div class="post-author-bio">
                    <% if(story){%>
                    <% if(story.user?.photo){%>
                    <img src="<%=story.user.photo%>" alt="post-author">
                    <% }else{%>
                    <img src="/profile-pic.png" alt="" class="profile-avatar">
                    <% } %>
                    <div class="post-author-details">
                        <h4><%= story.author %> </h4>
                        <% if(story.user?.bio){%>
                        <p><%= story.user?.bio %></p>
                        <% }else{%>
                        <p>No Info about writer to display.</p>
                        <% } %>
                        <div class="post-author-socials">
                            <% if(story.user?.facebook){%>
                            <a href="<%= story.user.facebook%>" target="_blank"><img src="/Facebook_Logo.png"
                                    alt="Fb logo"></a>
                            <% } %>
