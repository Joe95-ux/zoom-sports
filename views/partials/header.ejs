<body>
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v14.0"
        nonce="VfUlIJaT"></script>

    <nav class="navigation">
        <div class="blog-nav-enclosure">
            <div class="logo-and-links">
                <div class="logo">
                    <div class="burger" style="display:none;">
                        <div class="line1"></div>
                        <div class="line2"></div>
                        <div class="line3"></div>
                    </div>
                    <a href="/">
                        <div class="logo-wrapper">
                            <img src="/logo.png" alt="what2watch">
                        </div>

                    </a>
                </div>
                <i class="fas fa-search small-screen-search-icon"></i>
                <div class="search-bar big-screen-search">
                    <form action="/search" method="GET" class="search-form">
                        <div class="search-field">
                            <i class="fas fa-search"></i>
                            <input type="text" class="search" placeholder="search for a movie..." name="query">
                            <input type="submit" value="search" hidden>
                        </div>
                    </form>
                </div>
                <ul class="nav_links">
                    <li class="nav_link"> <a href="/blog/posts">Blog</a> </li>
                    <% if(user){%>
                    <% if(user.privilege === "admin"){%>
                    <li class="nav_link"> <a href="/blog/admin/dashboard/<%= user._id %>">Dashboard</a> </li>
                    <% }else{%>
                        <li class="nav_link"> <a href="/blog/dashboard/<%= user._id %>">Dashboard</a> </li>
                    <% } %>
                    <% } %> 
                </ul>

            </div>

        </div>
