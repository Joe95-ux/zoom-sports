</head>

<body>
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v14.0"
        nonce="VfUlIJaT"></script>

    <nav class="navigation">
        <div class="blog-nav-enclosure">
            <div class="logo-and-links">
                <div class="logo">
                    <div class="burger" style="display:none;">
                        <div class="line1"></div>
                        <div class="line2"></div>
                        <div class="line3"></div>
                    </div>
                    <a href="/">
                        <div class="logo-wrapper">
                            <img src="/logo.png" alt="what2watch">
                        </div>

                    </a>
                </div>
                <ul class="nav_links">
                    <li class="nav_link"> <a href="/blog/posts">Blog</a> </li>
                    <% if(user){%>
                        <li class="nav_link"> <a href="/blog/dashboard/<%= user._id %>">Dashboard</a> </li>
                        <% } %>  
                </ul>


            </div>

        </div>
    </nav>

    <section id="header-container" class="blog-header">
        <div class="wrapper-enclosure-blog">
            <div class="form-container-wrapper">
                <% if(profile){%>
                <div class="forms-container edit-profile-form">

                    <div class="actions-wrapper">
                        <form method="POST" action="/blog/profile/<%=profile._id%>?_method=PUT"
                            enctype="multipart/form-data">
                            <div class="form-title float">
                                <div class="form-title-header">
                                    <i class="history fas fa-long-arrow-alt-left"></i>
                                    <h3>Edit Profile</h3>
                                    <h5></h5>
                                </div>
                                <div class="upload-profile-img">
                                    <div class="profile-image-enclosure">
                                        <% if(profile.photo){%>
                                        <img src="<%= profile.photo%>" alt="" class="profile-avatar">
                                        <% }else{%>
                                        <img src="/profile-pic.png" alt="" class="profile-avatar">
                                        <% } %>
                                        <div class="upload-input">
                                            <input type="file" title="profile image" name="photo" id="profile-pic">
                                            <i class="fas fa-camera"></i>
                                        </div>
                                    </div>

                                </div>

                            </div>
                            <div class="actions-input">
                                <i class="fas fa-user-alt"></i>
                                <% if(profile.name){%>
                                <input type="text" name="name" id="clientname" placeholder="username"
                                    value="<%=profile.name%>">
                                <%} else{%>
                                <input type="text" name="name" id="clientname" placeholder="username">
                                <% } %>
                            </div>
                            <div class="actions-input">
                                <i class="fas fa-envelope"></i>
                                <input type="text" name="username" id="email" placeholder="your email"
                                    value="<%= profile.username %> ">
                            </div>
                            <div class="actions-input">
                                <i class="fas fa-lock"></i>
                                <input type="password" name="password" id="clientpassword" placeholder="new password?" class="pass-input">
                                <div class="pass-reveal">
                                    <i class="fas fa-eye open-eye"></i>
                                    <i class="fas fa-eye-slash black-eye"></i>    
                                </div>
                            </div>
                            <div class="actions-input">
                                <i class="fas fa-user-tag"></i>
                                <input type="text" name="role" id="role" placeholder="Role" value="<%= profile.role %>">
                            </div>
                            <div class="actions-input">
                                <i class="fab fa-facebook-f"></i>
                                <input type="text" name="facebook" id="facebook" placeholder="facebook" value="<%= profile.facebook%>">
                            </div>
                            <div class="actions-input">
                                <i class="fab fa-instagram"></i>
                                <input type="text" name="instagram" id="insta" placeholder="instagram" value="<%= profile.instagram%>">
                            </div>
                            <div class="actions-input">
                                <i class="fab fa-twitter"></i>
                                <input type="text" name="twitter" id="twitter" placeholder="twitter" value="<%= profile.twitter%>">
                            </div>
                            <div class="actions-input" style="margin-bottom: 1.5rem;">
                                <i class="fas fa-address-card"></i>
                                <textarea class="textarea" name="bio" id="about-you" cols="5" rows="2"
                                    placeholder="Describe youself..."><%= profile.bio %> </textarea>
                            </div>
                            <button type="submit" class="send-btn">Edit Profile</button>
                        </form>
                        <p>By continuing you agree to the terms and conditions and privacy policy. </p>


                    </div>

                </div>

                <% } %>
            </div>



        </div>



    </section>
    <footer id="footer" class="blog-footer" style="padding-top:2rem ;">
        <div class="blog-nav-enclosure">
            <div class="footer-content">
                <div class="copyright-container">
                    <a href="/">
                        <img class="footer-logo" src="/logo.png" alt="what2watch">
                    </a>
                    <div>
                        <span class="copyright"><i class="far fa-copyright"></i></span>
                        <span>All rights reserved.</span>

                    </div>
                </div>
                <div class="important-links">
                    <a href="/">Home</a>
                    <a href="/about-us">About Us</a>
                    <a href="/privacy">Privacy Policy</a>
                    <a href="/movie/upcoming">Upcoming</a>
                </div>
                <div class="socials">
                    <a href="https://www.facebook.com/what2watch.net" target="_blank" class="social-icon facebook"><i
                            class="fab fa-facebook-f"></i></a>
                    <a href="https://www.instagram.com/what2watch4real/" target="_blank" class="social-icon ig"><i
                            class="fab fa-instagram"></i></a>
                    <a href="mailto:what2watch@what2watch.net" target="_blank" class="social-icon mail"><i
                            class="fas fa-envelope"></i></a>
                    <a href="https://youtube.com/channel/UCR5dmDeBAwWdh-IC6dol1gA" target="_blank"
                        class="social-icon yt"><i class="fab fa-youtube"></i></a>

                </div>

            </div>
            <div class="attribution">
                <h6>Powered by</h6>
                <img src="/moviedb-logo2.svg" alt="attribution">
            </div>

        </div>

    </footer>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <!-- embla -->
    <script src="/embla.js"></script>
    <script src="/autoplay.js"></script>
    <script src="/login.js"></script>
    <script src="/validate.js"></script>
    <script src="/index.js"></script>
</body>

</html>